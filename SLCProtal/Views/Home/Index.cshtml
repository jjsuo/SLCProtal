@model SLCProtal.Models.Home.MainModel
@{
    ViewBag.Title = "首页";
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link href="http://220.194.55.139/page/css/base.css" type="text/css" rel="stylesheet">
    <link href="http://220.194.55.139/page/css/style.css" type="text/css" rel="stylesheet">
    <link href="~/bower_components/toastr/build/toastr.min.css" rel="stylesheet" />
    <style type="text/css"></style>
    <script src="~/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="http://cdn.bootcss.com/jquery.form/3.20/jquery.form.min.js"></script>
    <script src="~/bower_components/toastr/build/toastr.min.js"></script>
    <script src="~/bower_components/moment/min/moment.min.js"></script>
    <script src="~/bower_components/moment/locale/zh-cn.js"></script>
    <script src="~/bower_components/underscore/underscore-min.js"></script>
    <script src="~/bower_components/layer/layer.js"></script>
    <script src="~/js/common.js"></script>
    <script src="~/js/index.js"></script>
    <!--表单验证-->
    <script src="~/bower_components/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/bower_components/jquery-validation/src/localization/messages_zh.js"></script>
    <!--[if lt IE 9]>
      <script src="http://cdn.bootcss.com/babel-polyfill/6.2.0/polyfill.js"></script>
    <![endif]-->
    <!--[if IE 6]>
    <script src="js/ie6PNG.js" type="text/javascript"></script>
    <script type="text/javascript">DD_belatedPNG.fix('*');</script>
    <![endif]-->
    <title>首页</title>

</head>
<body>
    <!--***header***-->
    <div class="htop">
        <div class="userInfo">
            <dl class="exchr">
                <dd class="cn">
                    <img src="/images/user.png">
                    <label>@ViewData["UserName"]</label>
                    <ul class="exchrSubindex" style="left: 1159.44px; display: none;">
                        <li id="userinfo">
                            <img src="/images/icon/ic_user_info.png">客户信息</li>
                        <li id="rempwdbtn">
                            <img src="/images/icon/ic_password.png">修改密码</li>
                        <li>
                            <img src="/images/icon/ic_exit.png">退出</li>
                    </ul>
                </dd>
            </dl>
        </div>
        <div class="tel400">
            <img src="/images/tel_400.png">
        </div>
    </div>
    <div class="hNav2">
        <div class="userrowMenu">
            <a href="javascipt:void(0)" class="activ" index="0">首页</a><span>/</span>
            <a href="/Home/Main?state=1" index="1">查看服务</a><span>/</span>
            <a href="/Home/Main?state=5" index="5">查看预约</a><span>/</span>
            <a href="/Home/Main?state=6" index="6">机票酒店</a><span>/</span>
            <a href="/Home/Main?state=4" index="4">查看签证</a><span>/</span>
            <a href="/Home/Main?state=7" index="7">接送服务</a><span>/</span>
            <a href="/Home/Main?state=2" index="2">海外服务</a><span>/</span>
            <a href="/Home/Main?state=13" index="13">联系方式</a>
        </div>
        <a class="wecTips">
            <img src="/images/logo_c.png">
        </a>
    </div>

    </div>
    <!--***header***-->
    <!--Progress Bar-->
    <div class="progressbar_bg">
        <div style="position: relative; margin-left: 200px; width: 1000px;">
            <div state="1">起草</div>
            <div state="2">审批中</div>
            <div state="3">合同签订</div>
            <div state="4">执行中</div>
            <div state="5">预约完成</div>
            <div state="6">出国准备</div>
        </div>
    </div>
    <!--Progress Bar-->
    <div class="usrBd_index">
        <div class="w1200_1">
            <div class="use-tab">
                <table>
                    <thead>
                        <tr>
                            <th style="width: 350px;">服务项目</th>
                            <th style="width: 120px;">服务内容</th>
                            <th style="width: 120px;">单位计算</th>
                        </tr>
                    </thead>
                </table>
                <div>
                    <table>
                        <tbody>
                            @foreach (var item in Model.ServiceItems)
                            {
                                <tr>
                                    <td style="width: 350px;">@item.ServiceName </td>
                                    <td style="width: 120px;">@item.ServiceContent</td>
                                    <td style="width: 120px;">@item.ServiceTime</td>
                                </tr>
		 
                            }


                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <div class="w1200_2">
            <div class="lishead">
                <ul>
                    @foreach (var item in Model.Specialist)
                    {
                        <li>
                            <div class="user-head">

                                <img class="img-circle m-t-xs img-responsive"  src="/speImage/@(item.ID.Split('\\')[1]).png">
                            </div>
                            <div class="tit">@item.Name</div>
                            <div class="txt">@item.Description</div>
                        </li>
                    }


                </ul>
            </div>

        </div>
    </div>
    <!--***footer***-->
    <div class="g-ft" style="background-color: #595655; margin: 0px; color: #acabaa; padding-top: 15px; height: 15px;">
        <div class="clearfix">
            Copyright © 2013 All Rights Reserved  版权所有：北京盛诺一家医院管理咨询有限公司&nbsp;&nbsp;&nbsp;&nbsp;京ICP备11025849-2京网公安备11010102001876号
        </div>
    </div>
    <!--***footer***-->
    <div class="m-mask" id="j-mask" style="display: none;"></div>
    <!--客户信息-->
    <div html="/home/AccountInfo"></div>
    <!--悬浮客户评分-->
    <div class="scorebtn">
    </div>
    <div html="/Service/Scores">
    </div>
    <script>
        var menuState = '@Model.Status';
        var indexs = eval('@Html.Raw(Json.Encode(Model.SiteMaps))');
    </script>
</body>
</html>
